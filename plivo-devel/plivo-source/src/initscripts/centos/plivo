#!/bin/bash
#
# plivo        Starts plivo
#
#
# chkconfig: 2345 99 10
# description: Plivo framework
### BEGIN INIT INFO
# Provides: $plivo
# Required-Start: $local_fs
# Required-Stop: $local_fs
# Default-Start:  2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Plivo framework
# Description: Plivo is a Communications Framework to rapidly build voice based apps, 
# to make or receive calls, using your existing web development skills 
# and your existing infrastructure.

### END INIT INFO

plivo_config=default

# Source function library.
. /etc/init.d/functions

RETVAL=0

prog=plivo
name="Plivo [$plivo_config]"
exec=/usr/local/plivo/bin/plivo
restpid=/usr/local/plivo/tmp/rest-${plivo_config}.pid
outboundpid=/usr/local/plivo/tmp/outbound-${plivo_config}.pid
lockfile=/var/lock/subsys/$prog


check_state() {
	declare -i count
	count=2
	count=$($exec status |grep "\[$plivo_config\]" |grep -c "not running")
	return $count
}


start() {
	[ -x $exec ] || exit 5

	# Source config
        if [ -f /etc/sysconfig/plivo ] ; then
                . /etc/sysconfig/plivo
	fi
	umask 077

        echo -n $"Starting $name: "
        $exec start &>/dev/null 
	check_state
        RETVAL=$?
        if [ $RETVAL -eq 0 ]; then
		touch $lockfile
		success	
	else
		failure
	fi
        echo
        return $RETVAL
}
stop() {
        echo -n $"Shutting down $name: "
        $exec stop &>/dev/null
	check_state
        RETVAL=$?
        if [ $RETVAL -eq 2 ]; then
		RETVAL=0
		rm -f $lockfile
		success	
	else
		failure
	fi
        echo
        return $RETVAL
}
reload()  {
	echo -n "Reloading $name ..."
	check_state
	RETVAL=$?
	if [ $RETVAL -eq 0 ]; then
		$exec reload &>/dev/null && success || failure
	else
		echo -n " not started ! "
		failure
	fi
	echo
	return $RETVAL
}
rhstatus() {
	status -p "$restpid" plivo-rest
	status -p "$outboundpid" plivo-outbound
}
restart() {
        stop
        start
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        restart
        ;;
  reload)
	reload
	;;
  status)
        rhstatus
        ;;
  *)
        echo $"Usage: $0 {start|stop|restart|reload|status}"
        exit 2
esac

exit $RETVAL
